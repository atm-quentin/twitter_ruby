<p id="notice"><%= notice %></p>

<p>
  <strong>Nom:</strong>
  <%= @user.nom %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>


<table>
  <thead>
    <tr>
      <th>Nom</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% User.where('id != ?', @user.id).each do |user| %>
      <tr>
        <%= render 'display_user', user: user %>
        <td><%= link_to 'Follow', user %></td>
     </tr>
	<% end %>
  </tbody>
</table>




<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Tweets', user_tweets_path(@user) %> |
<%= link_to 'Users', users_path() %> |
<%= link_to 'Logout', login_path %>
